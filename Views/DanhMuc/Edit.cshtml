@model GiaoHangMongoDB.Models.ViewModels.DanhMucThucAn

<div class="container">
    <h2>Sửa danh mục thức ăn</h2>
    <form asp-action="Edit">
        <input type="hidden" asp-for="MaDanhMuc" />
        <div class="form-group">
            <label asp-for="Name">Tên danh mục</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Description">Mô tả</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
    </form>
</div>
