@model GiaoHangMongoDB.Models.ViewModels.ThucAnViewModel

<div class="container">
    <h2>Thêm mới món ăn</h2>

    <form asp-action="Create">
        <div class="form-group">
            <label for="TenThucAn">Tên món ăn</label>
            <input type="text" class="form-control" id="TenThucAn" asp-for="ThucAn.TenThucAn" required />
        </div>

        <div class="form-group">
            <label for="DanhMuc">Danh mục</label>
            <select class="form-control" id="DanhMuc" asp-for="ThucAn.DanhMuc"
                    asp-items="@(new SelectList(Model.DanhMucThucAns, "MaDanhMuc", "Name", Model.ThucAn.DanhMuc))" required>
            </select>

        </div>

        <div class="form-group">
            <label for="Gia">Giá</label>
            <input type="number" class="form-control" id="Gia" asp-for="ThucAn.Gia" required />
        </div>

        <div class="form-group">
            <label for="MoTa">Mô tả</label>
            <textarea class="form-control" id="MoTa" asp-for="ThucAn.MoTa" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
    </form>
</div>
